#! /bin/sh

set -e

CVERSION=`dpkg-query -W -f='${Version}' naro-kernel-source | sed 's/~.*$//'`

ARCH=`dpkg --print-architecture`
case $ARCH in
  amd64)
    ARCH="x86_64"
    ;;
  lpia)
    ARCH="i686"
    ;;
  i386)
    ARCH="i686"
    ;;
  armhf)
    ARCH="arm"
    ;;
  *)
    echo "WARNING: unsupported arch: $ARCH"
    ARCH="$ARCH"
    ;;
esac

case "$1" in
  configure)
    /usr/lib/dkms/common.postinst xpad $CVERSION /usr/share/xpad $ARCH $2 || exit $?
    ;;
esac

exit 0
